<div style="display: flex; ">
    <h1 style="margin-left: 50px;">Лекции</h1>
    {{#if isAuth}}
    <div style="display: flex; padding-left:71%">
        <form action="/add">
            <button class='btn' style="width:60px; margin-top: 60px; height:50px; font-size:25px">+</button>
        </form>

        
    </div>

    {{/if}}
</div>
<div style="" class="her">

    {{#if courses.length}}
    {{#each courses}}
    <div class="roww">
        <div class="col s6 ">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">{{title}}</span>
                </div>
                <div class="card-action actions">
                    <a href="/courses/{{id}}" target="_blank" style="font-size: 13px;">Открыть лекцию</a>
                    {{#if @root.isAuth}}
                    <a href="/courses/{{id}}/edit?allow=true" style="font-size: 13px;">Редактировать</a>
                    <form action="/card/add" method="POST">
                        <input type="hidden" name="id" value="{{id}}">
                        <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>Kursov net</p>
    {{/if}}

</div>