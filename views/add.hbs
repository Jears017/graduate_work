<h1>Добавить лекцию</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Тема лекции</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    <div class="row">
        <div class="input-field">
            <textarea id="img" name="img" class="materialize-textarea" required></textarea>
            <label for="img">Материал лекции</label>
        </div>
    </div>
        <div class="input-field">
        <input id="link" name="link" type="text" class="validate">
        <label for="link">Ссылка на видео материал</label>
        <span class="helper-text" data-error="Добавьте ссылку"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Добавить лекцию</button>
</form>