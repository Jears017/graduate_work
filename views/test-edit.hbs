<h1>Редактировать тест {{test.name}}</h1>
<form action="/tests/edit" method="POST">
  <div class="input-field">
    <input id="name" name="name" type="text" class="validate" required value="{{test.name}}">
    <label for="name">Тема теста</label>
    <span class="helper-text" data-error="Введите название темы"></span>
  </div>
  <div class="input-field">
    <input id="link" name="link" type="text" class="validate" required value="{{test.link}}">
    <label for="link">Ссылка на тест</label>
    <span class="helper-text" data-error="Вставьте ссылку"></span>
  </div>
  <input type="hidden" name="id" value="{{test.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary">Добавить тест</button>
</form>

<form action="/tests/remove" method="POST">
  <input type="hidden" name="id" value="{{test.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red" style="margin-top: 1rem;">Удалить тест</button>
</form>